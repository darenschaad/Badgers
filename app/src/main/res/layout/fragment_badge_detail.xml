<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.badgers.ui.BadgeDetailFragment"
    tools:background="@color/colorPrimary">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="@color/colorPrimary"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp"
        android:id="@+id/backgroundLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/categoryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="100-PHILOSOPHY &amp; PHYSICS"
                android:textSize="55sp"
                android:gravity="center"

                android:layout_gravity="center"
                android:rotation="-90" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_weight="0.9"
            android:id="@+id/backgroundLayout2">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:id="@+id/imageLayout">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/myBadgeTextView"
                    android:layout_above="@+id/badgeImageView"
                    android:text="MY BADGE"
                    android:layout_marginBottom="1dp"
                    android:gravity="center_horizontal"
                    android:textSize="30sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/badgeImageView"
                    android:src="@drawable/icon"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center" />
                </RelativeLayout>
            </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingTop="10dp"

                    android:paddingBottom="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:shrinkColumns="2">


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <TextView
                                android:text="ACTIVITY"
                                android:id="@+id/activityTextView"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_large"
                                android:gravity="center"
                                android:paddingRight="20dp" />
                            <View android:layout_width="1dp"
                                android:background="@android:color/background_dark"
                                android:layout_height="match_parent"
                                android:id="@+id/divider1"/>

                            <TextView
                                android:gravity="left|center"
                                android:textStyle="bold"
                                android:id="@+id/badgeNameTextView"
                                android:text="Name"
                                android:textSize="@dimen/text_large"
                                android:scrollHorizontally="false"
                                android:paddingLeft="3dp"/>

                        </TableRow>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimaryDark"
                            android:id="@+id/divider2"/>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <TextView
                                android:text="DEWEY CLASS"
                                android:background="@android:color/white"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_medium"
                                android:gravity="center"
                                android:id="@+id/deweyClassTextView"/>

                            <View android:layout_width="1dp"
                                android:background="@android:color/background_dark"
                                android:layout_height="match_parent"
                                android:id="@+id/divider3"/>

                            <TextView
                                android:gravity="left"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_medium"
                                android:id="@+id/indexTextView"
                                android:text="Index"
                                android:paddingLeft="3dp"/>

                        </TableRow>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/black"
                            android:id="@+id/divider4"/>
                    </TableLayout>

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorDivider"
                            android:id="@+id/qualificationTableRow"

                            >

                            <TextView
                                android:text=""
                                android:textStyle="bold"
                                android:paddingLeft="70dp"
                                android:gravity="right" />
                            <View android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:id="@+id/divider5"/>

                            <TextView
                                android:id="@+id/badgeQualification"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_medium"
                                android:text="BADGE QUALIFICATIONS:"
                                android:gravity="left"
                                android:textColor="@android:color/white"
                                />

                        </TableRow>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimaryDark"
                            android:id="@+id/divider6"/>

                    </TableLayout>

                    <ScrollView android:id="@+id/ScrollView01"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:shrinkColumns="2">



                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <TextView
                                android:text="To Do:"
                                android:textStyle="bold"
                                android:paddingLeft="20dp"
                                android:paddingRight="3dp"
                                android:textSize="@dimen/text_small"
                                android:gravity="right"
                                android:id="@+id/toDoTextView"/>
                            <View android:layout_width="1dp"
                                android:background="@android:color/background_dark"
                                android:layout_height="match_parent"
                                android:id="@+id/divider7"/>

                            <TextView
                                android:gravity="left|center"
                                android:textStyle="bold"
                                android:id="@+id/descriptionTextView"
                                android:text="Description"
                                android:textSize="@dimen/text_small"
                                android:scrollHorizontally="false"
                                android:paddingLeft="3dp"
                                android:paddingRight="15dp"/>

                        </TableRow>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimaryDark"
                            android:id="@+id/divider8"/>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <TextView
                                android:text="Proof:"
                                android:background="@android:color/white"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_small"
                                android:gravity="right"
                                android:paddingRight="3dp"
                                android:id="@+id/proofWordTextView"/>
                            <View android:layout_width="1dp"
                                android:background="@android:color/background_dark"
                                android:layout_height="match_parent"
                                android:id="@+id/divider9"/>

                            <TextView
                                android:gravity="left"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_small"
                                android:id="@+id/proofTextView"
                                android:text="Proof"
                                android:paddingLeft="3dp"/>

                        </TableRow>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimaryDark"
                            android:id="@+id/divider10"/>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <TextView
                                android:text="Creator:"
                                android:background="@android:color/white"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_small"
                                android:gravity="right"
                                android:paddingRight="3dp"
                                android:id="@+id/creatorWordTextView"/>
                            <View android:layout_width="1dp"
                                android:background="@android:color/background_dark"
                                android:layout_height="match_parent"
                                android:id="@+id/divider11"/>

                            <TextView
                                android:gravity="left"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_small"
                                android:id="@+id/creatorTextView"
                                android:text="Creator"
                                android:paddingLeft="3dp"/>

                        </TableRow>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimaryDark"
                            android:id="@+id/divider12"/>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <TextView
                                android:text="Date:"
                                android:background="@android:color/white"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_small"
                                android:gravity="right"
                                android:paddingRight="3dp"
                                android:id="@+id/dateWordTextView"/>
                            <View android:layout_width="1dp"
                                android:background="@android:color/background_dark"
                                android:layout_height="match_parent"
                                android:id="@+id/divider13"/>

                            <TextView
                                android:gravity="left"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_small"
                                android:id="@+id/dateTextView"
                                android:text="Date"
                                android:paddingLeft="3dp"/>

                        </TableRow>


                    </TableLayout>
                    </ScrollView>
                </LinearLayout>


            </LinearLayout>


    </LinearLayout>


</FrameLayout>
